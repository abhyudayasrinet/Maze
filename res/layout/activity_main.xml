<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@drawable/maze"
    tools:context="${relativePackage}.${activityClass}"
    android:paddingTop="8dp" 
    android:paddingLeft="8dp"
    android:paddingRight="8dp">
    

    <Button
        android:id="@+id/normalGame"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_below="@+id/quickGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="NORMAL"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/records"
        android:layout_below="@+id/normalGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="RECORDS"
        android:textColor="#000000"
        android:textSize="20sp" />
    
    <com.google.android.gms.ads.AdView
	        android:id="@+id/adViewMainMenu"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_alignParentBottom="true"
	        ads:adSize="BANNER"
	        ads:adUnitId="ca-app-pub-4192002242677873/9916085340" />

    <Button
        android:id="@+id/quickGame"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/normalGame"
        android:layout_alignParentTop="true"
        android:layout_marginTop="63dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="QUICK GAME"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/help"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/help_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:padding="8dp"
        android:src="@android:drawable/ic_menu_help" />


</RelativeLayout>
